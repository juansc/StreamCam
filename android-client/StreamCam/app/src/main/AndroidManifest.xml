<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cs.lmu.StreamCam">

    <uses-sdk
        android:maxSdkVersion="21"/>

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.hardware.camera2"/>
    <uses-feature android:name="android.hardware.camera2.full"/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">


        <activity
            android:name="cs.lmu.StreamCam.activities.LoginScreen"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="cs.lmu.StreamCam.activities.CameraActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/CAMERA_title"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cs.lmu.StreamCam.activities.LoginScreen" />
        </activity>
        <activity
            android:name="cs.lmu.StreamCam.activities.CreateNewAccountActivity"
            android:label="@string/CREATE_ACC_title"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cs.lmu.StreamCam.activities.LoginScreen" />
        </activity>

        <service
            android:name=".services.FetchAddressIntentService"
            android:exported="false"/>

        <service android:name=".services.LocationService"
            android:exported="false"/>



        <service
            android:name=".services.AuthenticatorService">
            <!-- The intent filter specifies that the service will only respond
             if triggered by AccountAuthenticator-->
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator"/>
            </intent-filter>
            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/authenticator" />
        </service>

        <service android:name=".services.LoginRequestService"
            android:exported="false"/>

        <service android:name=".services.HTTPRequestService"
            android:exported="false"/>

        <provider
            android:authorities="cs.lmu.StreamCam.provider"
            android:name=".Utils.StubProvider"
            android:exported="false"
            android:syncable="true"/>


    </application>

</manifest>
